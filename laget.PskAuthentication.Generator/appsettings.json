{
  "Security": {
    "RijndaelIV": "#{RijndaelIV}",
    "RijndaelKey": "#{RijndaelKey}",
    "Salt": "#{Salt}",
    "Secret": "#{Secret}"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "#{path}",
          "restrictedToMinimumLevel": "Verbose",
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  }
}